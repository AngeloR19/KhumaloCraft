@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>

        .heading {
            width: 90%;
            display: flex;
            justify-content: center;
            align-self: center;
            flex-direction: column;
            text-align: center;
            margin: 20px auto;
        }

        .heading h1 {
            font-size: 50px;
            color: #000;
            margin-bottom: 25px;
            position: relative;
        }

        .heading h1::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 4px;
            display: block;
            margin: 0 auto;
            background-color: #a08679;
        }
 
        .banner{
            display: flex;
            margin-top: 80px;
        }

        .left-column,.right-column{
            flex-basis: 50%;
        }

        .right-column{
            width: 100%;
            float: right;
        }

        .left-column h1{
            font-size: 80px;
            margin-left: 20px;
        }

        .left-column p{
            font-size: 25px;
            margin-left: 20px;
            color: #666;
            margin-bottom: 35px;
        }

  

        span{
            color: #a08679;
            margin-left: 20px;
        }

        .about-image img {
            max-width: 100%;
            height: auto;
            display: block;
            transition: 0.5s ease;
        }

        .about-image:hover img {
            transform: scale(1.2);
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            position: relative;
        }

        

    </style>
</head>
<body>

    <div class="heading">
        <h1>Home</h1>
    </div>
   


    <div class="banner">
        <div class="about-image">
            <img src="/images/KC1.jpg" alt=" Images1">
        </div>

        <div class="left-column">
            <h1>Khumalo<span>Craft</span></h1>
            <p>
                Welcome to KhumaloCraft Emporium, where craftsmanship meets innovation on a global scale.
                Founded by visionary entrepreneur James Khumalo, our mission is to connect artisans worldwide
                with a discerning audience through our e-commerce platform. With a focus on handcrafted products,
                we're dedicated to showcasing the artistry and creativity of talented artisans from every corner of the globe.
            </p>
        </div>
    </div>

 

</body>
</html>
